<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	 version="3.1">
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
   
  
    
    
     <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>varvRealm</realm-name>
        <form-login-config>
            <form-login-page>/loginForm.jsp</form-login-page>
            <form-error-page>/loginError.jsp</form-error-page>
        </form-login-config>
    </login-config>
    
    
<security-constraint>    
    <web-resource-collection>
        <web-resource-name>user_pages</web-resource-name>
     
       
        <url-pattern>/customer/*</url-pattern>
        <url-pattern>/boat/*</url-pattern>
          <url-pattern>/boatVariant/*</url-pattern>
        <url-pattern>/engine/*</url-pattern>
        <url-pattern>/storage/*</url-pattern>
           <url-pattern>/templates/*</url-pattern>
        <url-pattern>/templates/*</url-pattern>
        <url-pattern>/header.jsp</url-pattern>
        <url-pattern>/index.jsp</url-pattern>
        <url-pattern>/footer.jsp</url-pattern>
          
        <url-pattern>/findAllBoatBrands.html</url-pattern>
        <http-method>POST</http-method>
          <http-method>GET</http-method>
       </web-resource-collection>

    <auth-constraint>
        <role-name>user</role-name>
    </auth-constraint>
</security-constraint>
 <servlet>
  <servlet-name>AddBoatVariant</servlet-name>
  <servlet-class>uk.ac.city.douglas.varv.servlets.boatVariant.AddBoatVariant</servlet-class>
</servlet>               
          
 <servlet-mapping>
  <servlet-name>AddBoatVariant</servlet-name>
  <url-pattern>/boatVariant/boatVariantAdd.html</url-pattern>
</servlet-mapping>                    
</web-app>
